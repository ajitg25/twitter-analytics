# Twitter Analytics - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API MODE SWITCH
# =============================================================================
# Set to "true" to use Official Twitter API (paid, requires OAuth credentials)
# Set to "false" or leave empty to use Rettiwt-API (free alternative)
TWITTER_OFFICIAL=false

# =============================================================================
# OFFICIAL TWITTER API CREDENTIALS (only needed if TWITTER_OFFICIAL=true)
# =============================================================================
# Get these from https://developer.twitter.com/
TWITTER_CLIENT_ID=your_client_id_here
TWITTER_CLIENT_SECRET=your_client_secret_here
TWITTER_CALLBACK_URL=http://localhost:8501/callback

# =============================================================================
# RETTIWT-API CONFIGURATION (only needed if TWITTER_OFFICIAL=false)
# =============================================================================
# Port for the Rettiwt Node.js microservice
RETTIWT_PORT=3001

# URL where the Rettiwt service is running
RETTIWT_SERVICE_URL=http://localhost:3001

# API Key for Rettiwt (generated from Twitter cookies)
# To generate: npx rettiwt-api auth login
# This enables authenticated features like DMs, posting, etc.
# Leave empty for guest mode (limited to public data)
RETTIWT_API_KEY=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Set to "development" for mock data and CSV exports
APP_ENV=production

# =============================================================================
# DATABASE (MongoDB)
# =============================================================================
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=twitter_analytics
